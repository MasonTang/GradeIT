<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" type="text/css" media="screen" href="../css/main.css" />
</head>

<body>

<nav role="navigation">
    <ul>
        <li><a href=""> ->Class </a></li>
        <li><a href="/"><img class="logo" src="../logo.png" alt=""></li></a>
        <li class="nav-title">Calculate Store Grades</li>
    </ul>
</nav>

<main role="main">

    <section class="welcome" role="region">
        <h1> Class: <%= classe.class %></h1>
    </section>



    <h2 class="class-name"></h2>

    <h3>Assignments:</h3>
    <div class="assignments">
        <ul class="assignmentslist">
            <li class="assignment-item">
                <form action="/assignment/<%=classe.id%>" method="POST" class="assignment-form">
                    <input type="text" name="assignment" placeholder="assignment">
                    <input name="weight" type="number" placeholder="weight %">
                    <input name="grade" type="number" placeholder="grades %">
                    <input type="submit" value="Save" />
                </form>
            </li>
        </ul>
    </div>
    </div>

    <ul>
        <li>Assignment</li>
        <li>Weights</li>
        <li>Grades</li>
    </ul>

    <ul id="get-assignment">
        <% assignment.forEach(function(assignments){%>
        <li class="addClassLayout"><%=assignments.assignment%> <%=assignments.weight%> <%=assignments.grade%> <button data-id='<%=assignments._id%>' class="remove">X</button>
        </li>
        
        <%})%>
    </ul>

    <p>Overall Grade: </p>

</main>
    
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
    <script src="/calculator.js"></script>
    <script src="/profile3.js"></script>
</body>

</html>