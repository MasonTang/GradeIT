<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
        integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" media="screen" href="../css/main.css" />
</head>

<body>

<nav class="profile-nav" role="navigation">
    <ul>
        <li><a href="/class/<%= classe.semester._id %>"><i class="fas fa-angle-left back-button">Class</i></a></li>
        <li class="right logout fas">
        <a href="/"><i class="fas fa-sign-out-alt back-button">Logout</i></a></li>
    </ul>
</nav>

<main role="main">

    <section class="welcome" role="region">
        <h1 class="center-flex"><%= classe.class %></h1>
        <h2 class="class-name"></h2>
        
        <h2 class="margin-left-sm">Assignments:</h2>
        <div class="assignments">
            <ul class="assignmentslist">
                <li class="assignment-item">
                    <form action="/assignment/<%=classe.id%>" method="POST" class="assignment-form">
                        <input class="assignment-box" type="text" name="assignment" placeholder="assignment" required>
                        <input class="assignment-box" name="weight" type="number" placeholder="weight %" required>
                        <input class="assignment-box" name="grade" type="number" placeholder="grades %" required>
                        <input class="card_button margin-top-sm" id="display-grade" type="submit" value="Save" />
                    </form>
                </li>
            </ul>
        </div>

    </section>

    <section class="display-overall-grades">
        <div class="row">
            <div>
                <div class="col-3">
                    <h3>Assignment</h3>
                </div>
                <div class="col-3">
                    <h3>Weight</h3>
                </div>
                <div class="col-3">
                    <h3>Grade</h3>
                </div>
                <div class="col-3">
                    <h3>Delete</h3>
                </div>
            </div>
        </div>

        <div id="get-assignment" class="row">
            <% assignment.forEach(function(assignments){%>
            <div class="assignment-grid">
                <div class="col-3 large-font">
                    <%=assignments.assignment%>
                </div>
                <div class="col-3 large-font">
                    <%=assignments.weight%>
                </div>
                <div class="col-3 large-font">
                    <%=assignments.grade%>
                </div>
                <div class="col-3">
                    <button data-id='<%=assignments._id%>' class-id='<%=classe._id%>' class="remove medium-font">X</button>
                </div>
            </div>
            <%})%>
        </div>

        <h2 class="margin-top-sm center-flex">Overall Grade</h2>
        <h2 class="margin-left-sm center-flex"><%= finalGrade %> </h3>

    </section>

</main>
    
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
    <script src="/calculator.js"></script>
    <script src="/profile3.js"></script>
</body>

</html>