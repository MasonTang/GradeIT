<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" type="text/css" media="screen" href="./css/main.css" />
</head>

<body>

    <nav role="navigation">
        <ul>
            <li><a href="/"><img class="logo" src="logo.png" alt=""></li></a>
            <li class="nav-title">Calculate Store Grades</li>
        </ul>
    </nav>
    
    <main role="main">
    
        <div class="welcome" role="region">
            <h1>Welcome
                <%= user.local.username %>
            </h1>
            <h3>Store and Calculate your grades from semester to semester</h3>
        </div>
    
        <section role="region">
        <form method="POST" action="/api/semester">
            <h1>Add Semester</h1>
            <input  id="input-semester" name="semester" type="text" placeholder="Fall, 2018">
            <input type="submit" value="Submit">
        </form>
        </section>
    
        <ul id="get-semester">
            <% semesters.forEach(function(semester){%>
                <li class="addSemesterLayout">
                    <a href="/class/<%=semester._id%>"><%=semester.semester%></a>
                    <button data-id='<%=semester._id%>' class="remove">X</button>
                </li>
            <%})%>
        </ul>
    
    </main>
  
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
    <script src="/profile3.js"></script>
</body>

</html>