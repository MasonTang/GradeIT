<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" type="text/css" media="screen" href="../css/main.css" />
</head>

<body>

    <nav role="navigation">
        <ul>
            <li><a href="/semester"> -< Semester </a> </li> <li><a href="/semester/"><img class="logo" src="../logo.png" alt=""></li></a>
            <li class="nav-title">Calculate Store Grades</li>
        </ul>
    </nav>
    
    <main role="main">
    
        <div class="welcome" role="region">
            <h1>Semester <%= semester.semester %></h1>
        </div>
    
        <section role="region">
            <h1>Add Classes</h1>
            <form action="/class/<%= semester._id %>" method="POST">
                <input type="text" name="class" placeholder="Chemistry">
                <input type="submit" value="Add">
            </form>
        </section>

    <ul id="get-class">
        <% classes.forEach(function(classe){%>
        <li class="addClassLayout">
            <a href="/assignment/<%=classe._id%>"><%=classe.class%></a>
            <button data-id='<%=classe._id%>' class="remove">X</button>
        </li>
        <%})%>
    </ul>

    </main>
    
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
    <script src="/profile3.js"></script>
</body>

</html>